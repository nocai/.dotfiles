{
    "list.nextKeymap": "<C-n>",
    "list.previousKeymap": "<C-e>",

    "suggest.noselect": false,
    "suggest.autoTrigger": "trigger",

    "languageserver": {
        "golang": {
          "command": "gopls",
          "args": ["-remote=auto"],
          "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
          "filetypes": ["go"],
          "initializationOptions": {
                "usePlaceholders": false,
                "completeUnimported": true
          }
        }
      }
}
